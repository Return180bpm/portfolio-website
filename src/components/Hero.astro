---
import { Picture } from '@astrojs/image/components'
import { Trans, HeadHrefLangs } from 'astro-i18next/components'
import { t } from 'i18next'
import ContactButton from './ui/ContactButton.astro'

import heroImage from '@assets/images/me-bw.jpeg'
---

<section
	data-testid="hero"
	class="grid gap-space-fl-m lg:grid-flow-col lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)]"
	id="hero"
>
	<h1 class="text-fl-2xl">{t('home.hero.heading')}</h1>
	<Trans i18nKey="home.hero.text">
		<div class="text-fl-base">SLOT 1 for i18n</div>
	</Trans>
	{t('home.hero.cta')}
	<div>
		<ContactButton />
	</div>
	<div
		data-testid="hero-img"
		class="hidden h-0 min-h-full overflow-auto lg:block"
	>
		<Picture
			src={heroImage}
			alt="Tom Szwaja"
			widths={[400, 640]}
			sizes="33vw"
			aspectRatio="1395â€Š:1887"
			loading="eager"
			class="h-full w-full object-cover object-top"
		/>
	</div>
</section>
