import heroImage from '@assets/images/me-bw.jpeg'
---

<section data-testid="hero" class="mb-16 flex h-min gap-8" id="hero">
	<div>
		<Trans i18nKey="home.hero">
			<h1 class="spacing-heading-subheading text-5xl font-black">
				SLOT 0 for i18n
			</h1>
			<div class="mb-6">SLOT 1 for i18n</div>
		</Trans>
		<div class="">
			<ContactButton />
		</div>
	</div>
	<div
		data-testid="hero-img"
		class="hidden max-h-full items-center justify-center lg:flex"
	>
		<Picture
			src={heroImage}
			alt="Tom Szwaja"
			widths={[400, 640]}
			sizes="33vw"
			fit="cover"
			position="top"
