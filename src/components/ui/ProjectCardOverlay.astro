---
import { t } from 'i18next'

interface Props {
	description: string
	skill_tags: string[]
	tech_tags: string[]
	repoURL: string
}

const { description, skill_tags, tech_tags, repoURL } = Astro.props
---

<div
	class="description-overlay invisible absolute z-10 flex h-full w-full flex-col justify-between border-b border-zinc-950 bg-light pb-4 font-light opacity-0 transition-all duration-300"
>
	<div class="flex flex-col gap-2 text-zinc-500">
		<div class="flex gap-2">
			{skill_tags.map((skill) => <span>{skill}</span>)}
		</div>
		<div class="flex gap-2">
			{tech_tags.map((tech) => <span>{tech}</span>)}
		</div>
	</div>
	<p class="text-2xl">
		{description}
	</p>
	<a
		href={repoURL}
		aria-label="Link to repo"
		target="_blank"
		class="text-xl font-normal underline"
	>
		{t('home.projects.card.link-in-overlay')}
	</a>
</div>
