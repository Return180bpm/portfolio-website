---
import { t } from 'i18next'

interface Props {
	description: string
	skill_tags: string[]
	tech_tags: string[]
	repoURL: string
}

const { description, skill_tags, tech_tags, repoURL } = Astro.props
---

<div
	class="description-overlay invisible font-light absolute z-10 flex h-full w-full flex-col justify-between bg-light opacity-0 transition-all duration-300 pb-4 border-b border-zinc-950"
>
	<div class="text-zinc-500 flex flex-col gap-2">
		<div class="flex gap-2">
			{skill_tags.map((skill) => <span>{skill}</span>)}
		</div>
		<div class="flex gap-2">
			{tech_tags.map((tech) => <span>{tech}</span>)}
		</div>
	</div>
	<p class="text-2xl">
		{description}
	</p>
	<a href={repoURL} target="_blank" class="text-xl font-normal underline">
		{t('home.projects.card.link-in-overlay')}
	</a>
</div>
