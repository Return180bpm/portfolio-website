<section
	data-testid="projects"
	id="projects"
	class="mb-16 flex flex-col md:mb-16"
>
	<h2 class="text-3xl font-bold lg:text-4xl">
		{t('home.projects.heading')}
	</h2>
	<p class="mb-16 mt-2 text-lg font-light">The things that left a mark.</p>
	<div class="projects-grid mb-10">
		{Array(6).fill(projects[0],0).map((project) => <ProjectCard {project} />)}
	</div>
