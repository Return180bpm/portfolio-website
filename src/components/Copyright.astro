---
import { t } from 'i18next'

const siteRepoUrl = import.meta.env.SITE_REPO_URL
---

<div class="grid w-full place-items-center gap-space-fl-s">
	<div class="grid gap-space-fl-s" set:html={t('footer.made')} />
	<a
		class="w-full p-space-fl-m"
		href={siteRepoUrl}
		target="_blank"
		rel="noopener"
		aria-label={t('footer.repo')}>{t('footer.repo')}</a
	>
</div>
